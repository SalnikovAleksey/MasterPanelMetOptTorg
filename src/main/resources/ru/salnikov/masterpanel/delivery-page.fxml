          <TableColumn fx:id="nomenclature" minWidth="0.0" prefWidth="262.0" text="Номенклатура"/>
          <TableColumn fx:id="weight" minWidth="0.0" prefWidth="205.0" text="Вес, кг"/>
          <TableColumn fx:id="date" minWidth="0.0" prefWidth="205.0" text="Дата"/>
      </columns>
    </TableView>
